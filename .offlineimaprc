# python setup.py install

[general]
ui = ttyui
accounts = PersonalGmail

[Account PersonalGmail]
localrepository = Local
remoterepository = PersonalGmailRemote
synclabels = yes
status_backend = sqlite
# This header is where labels go.  Usually you will be fine
# # with default value (X-Keywords), but in case you want it
# # different, here we go:
labelsheader = X-Label
autorefresh = 8

[Repository Local]
type = Maildir
localfolders = ~/.mail

[Repository PersonalGmailRemote]
maxconnections = 1
type = Gmail
remoteuser = dbueno@gmail.com
ssl = true
sslcacertfile = /usr/local/etc/openssl/cert.pem
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Important',
                                             '[Gmail]/Spam',
                                             'Promotions']
