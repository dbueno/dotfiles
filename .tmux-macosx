set -g status-right '#[fg=yellow]#[default] #[fg=white]%H:%M#[default]'

# Integrate with osx clipboard
# make sure to do brew install reattach-to-user-namespace first
# Setup 'v' to begin selection as in Vim
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-pipe "reattach-to-user-namespace pbcopy"

# Update default binding of `Enter` to also use copy-pipe
unbind-key -T copy-mode-vi Enter
bind-key -T copy-mode-vi Enter send-keys -X copy-pipe "reattach-to-user-namespace pbcopy"

# so I can use open in tmux
set-option -g default-command "reattach-to-user-namespace -l /opt/brew/bin/bash"

