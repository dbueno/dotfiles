shell-integration = zsh
theme = tokyonight-night
mouse-hide-while-typing
font-family = Iosevka
font-size = 12
font-thicken
keybind = command+shift+plus=increase_font_size:1
keybind = command+shift+minus=decrease_font_size:1
keybind = command+equal=reset_font_size

keybind = ctrl+shift+g=write_screen_file:paste
keybind = ctrl+shift+one=jump_to_prompt:-1
keybind = ctrl+shift+two=jump_to_prompt:1

keybind = ctrl+shift+z=toggle_split_zoom
keybind = ctrl+shift+i=inspector:toggle
keybind = ctrl+shift+w=close_surface
keybind = command+q=quit

keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+enter=new_split:right
keybind = ctrl+shift+backslash=new_split:left
keybind = command+shift+enter=new_split:down
keybind = command+shift+backslash=new_split:up
keybind = ctrl+shift+equal=equalize_splits

keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+s=goto_split:right
keybind = ctrl+shift+t=goto_split:top
keybind = ctrl+shift+n=goto_split:bottom
keybind = ctrl+shift+comma=move_tab:-1
keybind = ctrl+shift+period=move_tab:1

keybind = ctrl+shift+up=scroll_page_up
keybind = ctrl+shift+down=scroll_page_down

keybind = command+r=reset
keybind = command+k=clear_screen
